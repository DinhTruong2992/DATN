<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <title><%= product.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/layout.css">

    <style>
        body {
            margin: 0;
            height: 100vh;
            overflow: hidden;
            background: #fff;
        }

        /* Header */
        .detail-header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            padding: 16px;
            display: flex;
            align-items: center;
            gap: 12px;
            background: #fff;
            border-bottom: 1px solid #eee;
            z-index: 1000;
        }

        .back-btn {
            font-size: 20px;
            cursor: pointer;
        }

        /* Content */
        .detail-content {
            position: absolute;
            top: 64px;
            bottom: 70px;
            left: 0;
            right: 0;
            overflow-y: auto;
            padding: 16px;
        }

        /* Image slider */
        .image-slider {
            display: flex;
            gap: 12px;
            overflow-x: auto;
        }

        .image-slider img {
            width: 80%;
            max-width: 320px;
            border-radius: 12px;
        }

        .image-slider::-webkit-scrollbar {
            display: none;
        }

        /* Info */
        .product-name {
            font-size: 20px;
            font-weight: 600;
            margin-top: 16px;
        }

        .product-price {
            color: #ff5722;
            font-size: 18px;
            font-weight: 600;
            margin: 8px 0;
        }

        .product-desc {
            color: #555;
            font-size: 14px;
        }

        /* Add to cart */
        .add-cart-btn {
            width: 100%;
            padding: 12px;
            background: #ff9800;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <!-- Header -->
    <div class="detail-header">
        <div class="back-btn" onclick="history.back()">←</div>
        <strong>Chi tiết sản phẩm</strong>
    </div>

    <!-- Content -->
    <div class="detail-content">

        <!-- Images -->
        <div class="image-slider">
            <% product.images.forEach(img => { %>
                <img src="<%= img %>" alt="">
            <% }) %>
        </div>

        <!-- Info -->
        <div class="product-name"><%= product.name %></div>
        <div class="product-price">
            <%= product.price.toLocaleString('vi-VN') %>₫
        </div>

        <div class="product-desc">
            <%= product.description %>
        </div>

        <button class="add-cart-btn">
            Thêm vào giỏ hàng
        </button>
    </div>

    <!-- Bottom Navigation -->
    <%- include('partials/bottom-nav', { active: active }) %>

</body>

</html>
