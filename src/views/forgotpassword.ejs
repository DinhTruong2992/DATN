<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên mật khẩu - Authentication App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        }
        .forgot-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 40px;
            width: 100%;
            max-width: 450px;
            border: 1px solid #e5e5e5;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 1px solid #e5e5e5;
            padding-bottom: 20px;
        }
        .logo {
            height: 60px;
            object-fit: contain;
            margin-bottom: 20px;
        }
        .title {
            font-size: 28px;
            font-weight: 500;
            color: #111;
            margin-bottom: 8px;
        }
        .subtitle {
            color: #666;
            font-size: 16px;
            margin-bottom: 0;
            line-height: 1.5;
        }
        .form-control {
            border-radius: 8px;
            padding: 12px 16px;
            border: 1px solid #ddd;
            font-size: 16px;
            transition: all 0.2s;
            background-color: #fafafa;
        }
        .form-control:focus {
            border-color: #111;
            background-color: white;
            box-shadow: 0 0 0 2px rgba(0,0,0,0.1);
        }
        .form-label {
            font-weight: 500;
            color: #333;
            margin-bottom: 8px;
            font-size: 14px;
            display: block;
        }
        .btn-primary {
            background-color: #111;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 14px;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.2s;
            margin-top: 20px;
        }
        .btn-primary:hover {
            background-color: #333;
        }
        .btn-primary:disabled {
            background-color: #999;
            cursor: not-allowed;
        }
        .btn-secondary {
            background-color: #f5f5f5;
            color: #111;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 14px;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            transition: all 0.2s;
            margin-top: 10px;
        }
        .btn-secondary:hover {
            background-color: #e5e5e5;
        }
        .links {
            text-align: center;
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid #e5e5e5;
        }
        .links a {
            color: #111;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            transition: color 0.2s;
        }
        .links a:hover {
            color: #666;
            text-decoration: underline;
        }
        .error-message {
            color: #d32f2f;
            font-size: 12px;
            margin-top: 4px;
            display: none;
        }
        .success-message {
            color: #28a745;
            font-size: 14px;
            margin-top: 12px;
            text-align: center;
        }
        .show-error {
            display: block;
        }
        .is-invalid {
            border-color: #d32f2f;
        }
        .alert {
            border-radius: 8px;
            padding: 12px 16px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            font-size: 14px;
        }
        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }
        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
        .alert-info {
            background-color: #d1ecf1;
            border-color: #bee5eb;
            color: #0c5460;
        }
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 2px solid #f3f3f3;
            border-top: 2px solid #111;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 8px;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .back-link {
            display: inline-flex;
            align-items: center;
            color: #666;
            text-decoration: none;
            font-size: 14px;
            margin-bottom: 20px;
            transition: color 0.2s;
        }
        .back-link:hover {
            color: #111;
        }
        .back-link::before {
            content: "←";
            margin-right: 8px;
            font-size: 16px;
        }
        .steps {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 30px;
            position: relative;
        }
        .steps::before {
            content: '';
            position: absolute;
            top: 15px;
            left: 20%;
            right: 20%;
            height: 2px;
            background-color: #e5e5e5;
            z-index: 1;
        }
        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 2;
        }
        .step-circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #e5e5e5;
            color: #666;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
            transition: all 0.3s;
        }
        .step.active .step-circle {
            background-color: #111;
            color: white;
        }
        .step.completed .step-circle {
            background-color: #28a745;
            color: white;
        }
        .step-label {
            font-size: 12px;
            color: #666;
            text-align: center;
        }
        .step.active .step-label {
            color: #111;
            font-weight: 500;
        }
        .code-inputs {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            margin: 20px 0;
        }
        .code-input {
            width: 50px;
            height: 60px;
            border: 2px solid #ddd;
            border-radius: 8px;
            text-align: center;
            font-size: 24px;
            font-weight: 600;
            background-color: #fafafa;
            transition: all 0.2s;
        }
        .code-input:focus {
            border-color: #111;
            background-color: white;
            outline: none;
            box-shadow: 0 0 0 2px rgba(0,0,0,0.1);
        }
        .code-input.filled {
            border-color: #111;
            background-color: white;
        }
        .resend-link {
            text-align: center;
            margin-top: 20px;
        }
        .resend-link a {
            color: #111;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
        }
        .resend-link a:hover {
            text-decoration: underline;
        }
        .resend-link .disabled {
            color: #999;
            cursor: not-allowed;
            text-decoration: none;
        }
        .timer {
            color: #666;
            font-size: 13px;
            margin-top: 8px;
        }
        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            padding: 4px;
            cursor: pointer;
            z-index: 2;
        }
        .password-toggle img {
            width: 20px;
            height: 20px;
            opacity: 0.6;
            transition: opacity 0.2s;
        }
        .password-toggle:hover img {
            opacity: 1;
        }
        .input-group {
            position: relative;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <div class="header">
            <img src="/assets/images/logo.jpg" alt="Logo" class="logo">
            <h1 class="title">Quên mật khẩu</h1>
            <p class="subtitle" id="stepSubtitle">Nhập email của bạn để đặt lại mật khẩu</p>
        </div>

        <!-- Phần quay lại trang đăng nhập -->
        <a href="/login" class="back-link">← Quay lại đăng nhập</a>

        <% if (message) { %>
            <div class="alert alert-<%= message.type %>">
                <%= message.text %>
            </div>
        <% } %>

        <!-- Steps indicator -->
        <div class="steps">
            <div class="step active" id="step1">
                <div class="step-circle">1</div>
                <span class="step-label">Nhập email</span>
            </div>
            <div class="step" id="step2">
                <div class="step-circle">2</div>
                <span class="step-label">Xác minh OTP</span>
            </div>
            <div class="step" id="step3">
                <div class="step-circle">3</div>
                <span class="step-label">Mật khẩu mới</span>
            </div>
        </div>

        <!-- Step 1: Email Input -->
        <form id="emailForm" style="display: block;">
            <div class="input-group">
                <label for="email" class="form-label">Email đăng ký</label>
                <input type="email" 
                       class="form-control" 
                       id="email" 
                       name="email"
                       placeholder="Nhập email bạn đã đăng ký"
                       required>
                <span class="error-message" id="emailError"></span>
            </div>
            
            <button type="submit" class="btn-primary" id="sendEmailBtn">
                Gửi mã xác nhận
            </button>
            
            <button type="button" class="btn-secondary" onclick="window.location.href='/login'">
                Hủy
            </button>
        </form>

        <!-- Step 2: OTP Verification -->
        <form id="otpForm" style="display: none;">
            <div class="input-group">
                <label class="form-label">Mã xác nhận đã được gửi đến: <span id="emailDisplay" style="font-weight: 600;"></span></label>
                <div class="code-inputs">
                    <input type="text" class="code-input" maxlength="1" data-index="0" oninput="moveToNext(this, 1)">
                    <input type="text" class="code-input" maxlength="1" data-index="1" oninput="moveToNext(this, 2)">
                    <input type="text" class="code-input" maxlength="1" data-index="2" oninput="moveToNext(this, 3)">
                    <input type="text" class="code-input" maxlength="1" data-index="3" oninput="moveToNext(this, 4)">
                    <input type="text" class="code-input" maxlength="1" data-index="4" oninput="moveToNext(this, 5)">
                    <input type="text" class="code-input" maxlength="1" data-index="5" oninput="moveToNext(this, 6)">
                </div>
                <input type="hidden" id="otpCode">
                <span class="error-message" id="otpError"></span>
                
                <div class="resend-link">
                    <a href="javascript:void(0)" id="resendLink" onclick="resendOTP()">Gửi lại mã</a>
                    <div class="timer" id="resendTimer">Gửi lại sau: <span id="countdown">60</span>s</div>
                </div>
            </div>
            
            <button type="submit" class="btn-primary" id="verifyOtpBtn">
                Xác nhận mã
            </button>
            
            <button type="button" class="btn-secondary" onclick="goToStep(1)">
                Quay lại
            </button>
        </form>

        <!-- Step 3: New Password -->
        <form id="passwordForm" style="display: none;">
            <div class="input-group">
                <label for="newPassword" class="form-label">Mật khẩu mới</label>
                <div style="position: relative;">
                    <input type="password" 
                           class="form-control" 
                           id="newPassword" 
                           name="newPassword"
                           placeholder="Nhập mật khẩu mới (8-16 ký tự)"
                           minlength="8"
                           maxlength="16"
                           required>
                    <button type="button" 
                            class="password-toggle" 
                            onclick="togglePassword('newPassword')">
                        <img src="/assets/images/hide.jpg" alt="Show/Hide">
                    </button>
                </div>
                <div class="requirements" style="margin-top: 10px;">
                    <div class="requirement" id="reqLength">
                        <span style="margin-right: 8px;">•</span>
                        <span style="font-size: 12px; color: #999;">8-16 ký tự</span>
                    </div>
                    <div class="requirement" id="reqUppercase">
                        <span style="margin-right: 8px;">•</span>
                        <span style="font-size: 12px; color: #999;">Ít nhất một chữ hoa</span>
                    </div>
                    <div class="requirement" id="reqSpecial">
                        <span style="margin-right: 8px;">•</span>
                        <span style="font-size: 12px; color: #999;">Ít nhất một ký tự đặc biệt (!@#$%^&*...)</span>
                    </div>
                </div>
                <span class="error-message" id="newPasswordError"></span>
            </div>
            
            <div class="input-group">
                <label for="confirmNewPassword" class="form-label">Xác nhận mật khẩu mới</label>
                <div style="position: relative;">
                    <input type="password" 
                           class="form-control" 
                           id="confirmNewPassword" 
                           name="confirmNewPassword"
                           placeholder="Nhập lại mật khẩu mới"
                           required>
                    <button type="button" 
                            class="password-toggle" 
                            onclick="togglePassword('confirmNewPassword')">
                        <img src="/assets/images/hide.jpg" alt="Show/Hide">
                    </button>
                </div>
                <span class="error-message" id="confirmNewPasswordError"></span>
            </div>
            
            <button type="submit" class="btn-primary" id="resetPasswordBtn">
                Đặt lại mật khẩu
            </button>
            
            <button type="button" class="btn-secondary" onclick="goToStep(2)">
                Quay lại
            </button>
        </form>

        <!-- Success Message -->
        <div id="successMessage" style="display: none; text-align: center;">
            <div style="font-size: 48px; color: #28a745; margin-bottom: 20px;">✓</div>
            <h3 style="color: #111; margin-bottom: 10px;">Đặt lại mật khẩu thành công!</h3>
            <p class="subtitle">Mật khẩu của bạn đã được đặt lại. Bây giờ bạn có thể đăng nhập bằng mật khẩu mới.</p>
            <button type="button" class="btn-primary" onclick="window.location.href='/login'" style="margin-top: 30px;">
                Đăng nhập ngay
            </button>
        </div>

        <div class="links">
            <a href="/register">Chưa có tài khoản? Đăng ký ngay</a>
        </div>
    </div>

    <script>
        // Biến toàn cục
        let currentStep = 1;
        let userEmail = '';
        let countdownInterval;
        let remainingTime = 60;
        const passwordStates = {
            newPassword: false,
            confirmNewPassword: false
        };

        // Khởi tạo OTP input
        document.querySelectorAll('.code-input').forEach(input => {
            input.addEventListener('keydown', function(e) {
                // Chỉ cho phép số
                if (e.key.length === 1 && !/[0-9]/.test(e.key)) {
                    e.preventDefault();
                }
                
                // Xử lý phím Backspace
                if (e.key === 'Backspace') {
                    const index = parseInt(this.dataset.index);
                    if (this.value === '' && index > 0) {
                        document.querySelector(`.code-input[data-index="${index - 1}"]`).focus();
                    }
                }
            });
            
            input.addEventListener('paste', function(e) {
                e.preventDefault();
                const pasteData = e.clipboardData.getData('text').trim();
                if (/^\d{6}$/.test(pasteData)) {
                    const inputs = document.querySelectorAll('.code-input');
                    for (let i = 0; i < 6; i++) {
                        inputs[i].value = pasteData[i];
                        inputs[i].classList.add('filled');
                    }
                    updateOTPCode();
                    document.getElementById('verifyOtpBtn').focus();
                }
            });
        });

        // Chuyển đến ô tiếp theo khi nhập
        function moveToNext(input, nextIndex) {
            if (input.value.length === 1) {
                input.classList.add('filled');
                if (nextIndex <= 5) {
                    document.querySelector(`.code-input[data-index="${nextIndex}"]`).focus();
                }
                updateOTPCode();
            } else if (input.value.length === 0) {
                input.classList.remove('filled');
                updateOTPCode();
            }
        }

        // Cập nhật OTP code
        function updateOTPCode() {
            let otp = '';
            document.querySelectorAll('.code-input').forEach(input => {
                otp += input.value;
            });
            document.getElementById('otpCode').value = otp;
        }

        // Toggle hiển thị mật khẩu
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const button = field.parentNode.querySelector('.password-toggle img');
            
            if (passwordStates[fieldId]) {
                field.type = 'password';
                button.src = '/assets/images/hide.jpg';
                passwordStates[fieldId] = false;
            } else {
                field.type = 'text';
                button.src = '/assets/images/show.jpg';
                passwordStates[fieldId] = true;
            }
        }

        // Chuyển đổi giữa các bước
        function goToStep(step) {
            currentStep = step;
            updateUI();
        }

        function updateUI() {
            // Ẩn tất cả các form
            document.getElementById('emailForm').style.display = 'none';
            document.getElementById('otpForm').style.display = 'none';
            document.getElementById('passwordForm').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
            
            // Reset error messages
            resetErrors();
            
            // Cập nhật steps
            document.querySelectorAll('.step').forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index + 1 < currentStep) {
                    step.classList.add('completed');
                    step.querySelector('.step-circle').textContent = '✓';
                } else if (index + 1 === currentStep) {
                    step.classList.add('active');
                    step.querySelector('.step-circle').textContent = index + 1;
                } else {
                    step.querySelector('.step-circle').textContent = index + 1;
                }
            });
            
            // Hiển thị form tương ứng
            switch(currentStep) {
                case 1:
                    document.getElementById('emailForm').style.display = 'block';
                    document.getElementById('stepSubtitle').textContent = 'Nhập email của bạn để đặt lại mật khẩu';
                    break;
                case 2:
                    document.getElementById('otpForm').style.display = 'block';
                    document.getElementById('emailDisplay').textContent = userEmail;
                    document.getElementById('stepSubtitle').textContent = 'Nhập mã xác nhận 6 chữ số';
                    startResendTimer();
                    break;
                case 3:
                    document.getElementById('passwordForm').style.display = 'block';
                    document.getElementById('stepSubtitle').textContent = 'Tạo mật khẩu mới cho tài khoản của bạn';
                    break;
                case 4:
                    document.getElementById('successMessage').style.display = 'block';
                    document.getElementById('stepSubtitle').textContent = '';
                    break;
            }
        }

        // Xác thực mật khẩu
        function validatePassword(password) {
            const isValidLength = password.length >= 8 && password.length <= 16;
            const hasUppercase = /[A-Z]/.test(password);
            const hasSpecial = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(password);
            
            updateRequirement('reqLength', isValidLength);
            updateRequirement('reqUppercase', hasUppercase);
            updateRequirement('reqSpecial', hasSpecial);
            
            return isValidLength && hasUppercase && hasSpecial;
        }

        function updateRequirement(elementId, isValid) {
            const element = document.getElementById(elementId);
            const icon = element.querySelector('span:first-child');
            const text = element.querySelector('span:last-child');
            
            if (isValid) {
                icon.textContent = '✓';
                icon.style.color = '#28a745';
                text.style.color = '#28a745';
            } else {
                icon.textContent = '•';
                icon.style.color = '#999';
                text.style.color = '#999';
            }
        }

        function validateConfirmPassword() {
            const password = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmNewPassword').value;
            const errorElement = document.getElementById('confirmNewPasswordError');
            
            if (confirmPassword && password !== confirmPassword) {
                errorElement.textContent = 'Mật khẩu không khớp';
                errorElement.classList.add('show-error');
                document.getElementById('confirmNewPassword').classList.add('is-invalid');
                return false;
            } else {
                errorElement.textContent = '';
                errorElement.classList.remove('show-error');
                document.getElementById('confirmNewPassword').classList.remove('is-invalid');
                return true;
            }
        }

        // Xử lý đếm ngược gửi lại OTP
        function startResendTimer() {
            remainingTime = 60;
            const resendLink = document.getElementById('resendLink');
            const countdownElement = document.getElementById('countdown');
            
            resendLink.style.pointerEvents = 'none';
            resendLink.style.color = '#999';
            
            clearInterval(countdownInterval);
            
            countdownInterval = setInterval(() => {
                remainingTime--;
                countdownElement.textContent = remainingTime;
                
                if (remainingTime <= 0) {
                    clearInterval(countdownInterval);
                    resendLink.style.pointerEvents = 'auto';
                    resendLink.style.color = '#111';
                    document.querySelector('.timer').style.display = 'none';
                }
            }, 1000);
        }

        // Gửi lại OTP
        async function resendOTP() {
            const resendLink = document.getElementById('resendLink');
            resendLink.style.pointerEvents = 'none';
            resendLink.style.color = '#999';
            resendLink.textContent = 'Đang gửi...';
            
            try {
                const response = await fetch('/api/auth/resend-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email: userEmail })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showMessage('Đã gửi lại mã xác nhận', 'success');
                    startResendTimer();
                    document.querySelector('.timer').style.display = 'block';
                } else {
                    showMessage(result.message || 'Không thể gửi lại mã', 'danger');
                }
            } catch (error) {
                console.error('Resend OTP error:', error);
                showMessage('Đã xảy ra lỗi', 'danger');
            } finally {
                resendLink.textContent = 'Gửi lại mã';
                if (remainingTime <= 0) {
                    resendLink.style.pointerEvents = 'auto';
                    resendLink.style.color = '#111';
                }
            }
        }

        // Xử lý form gửi email
        document.getElementById('emailForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            resetErrors();
            
            const email = document.getElementById('email').value.trim();
            
            if (!email) {
                showError('emailError', 'Vui lòng nhập email');
                return;
            }
            
            if (!isValidEmail(email)) {
                showError('emailError', 'Email không hợp lệ');
                return;
            }
            
            userEmail = email;
            
            // Hiển thị loading
            const submitBtn = document.getElementById('sendEmailBtn');
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading"></span> Đang gửi...';
            
            try {
                const response = await fetch('/api/auth/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    goToStep(2);
                } else {
                    showError('emailError', result.message || 'Email không tồn tại trong hệ thống');
                }
            } catch (error) {
                console.error('Forgot password error:', error);
                showMessage('Đã xảy ra lỗi kết nối', 'danger');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // Xử lý form xác nhận OTP
        document.getElementById('otpForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            resetErrors();
            
            const otpCode = document.getElementById('otpCode').value;
            
            if (otpCode.length !== 6) {
                showError('otpError', 'Vui lòng nhập đầy đủ 6 chữ số');
                return;
            }
            
            // Hiển thị loading
            const submitBtn = document.getElementById('verifyOtpBtn');
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading"></span> Đang xác nhận...';
            
            try {
                const response = await fetch('/api/auth/verify-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        email: userEmail, 
                        otp: otpCode 
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    goToStep(3);
                } else {
                    showError('otpError', result.message || 'Mã xác nhận không chính xác hoặc đã hết hạn');
                }
            } catch (error) {
                console.error('Verify OTP error:', error);
                showMessage('Đã xảy ra lỗi kết nối', 'danger');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // Xử lý form đặt lại mật khẩu
        document.getElementById('passwordForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            resetErrors();
            
            const newPassword = document.getElementById('newPassword').value;
            const confirmNewPassword = document.getElementById('confirmNewPassword').value;
            
            // Kiểm tra mật khẩu
            if (!validatePassword(newPassword)) {
                showError('newPasswordError', 'Mật khẩu phải đáp ứng tất cả yêu cầu');
                return;
            }
            
            // Kiểm tra xác nhận mật khẩu
            if (!validateConfirmPassword()) {
                return;
            }
            
            if (newPassword !== confirmNewPassword) {
                showError('confirmNewPasswordError', 'Mật khẩu không khớp');
                return;
            }
            
            // Hiển thị loading
            const submitBtn = document.getElementById('resetPasswordBtn');
            const originalText = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading"></span> Đang xử lý...';
            
            try {
                const response = await fetch('/api/auth/reset-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        email: userEmail, 
                        newPassword: newPassword 
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    goToStep(4);
                } else {
                    showMessage(result.message || 'Không thể đặt lại mật khẩu', 'danger');
                }
            } catch (error) {
                console.error('Reset password error:', error);
                showMessage('Đã xảy ra lỗi kết nối', 'danger');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        // Helper functions
        function isValidEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        function resetErrors() {
            document.querySelectorAll('.error-message').forEach(el => {
                el.textContent = '';
                el.classList.remove('show-error');
            });
            document.querySelectorAll('.is-invalid').forEach(el => {
                el.classList.remove('is-invalid');
            });
        }

        function showError(fieldId, message) {
            const errorElement = document.getElementById(fieldId);
            errorElement.textContent = message;
            errorElement.classList.add('show-error');
            
            const inputId = fieldId.replace('Error', '');
            const input = document.getElementById(inputId);
            if (input) {
                input.classList.add('is-invalid');
            }
        }

        function showMessage(text, type) {
            // Xóa thông báo cũ
            const existingAlert = document.querySelector('.alert');
            if (existingAlert) {
                existingAlert.remove();
            }
            
            // Tạo thông báo mới
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type}`;
            alertDiv.textContent = text;
            
            // Thêm vào container
            const container = document.querySelector('.forgot-container');
            const backLink = container.querySelector('.back-link');
            container.insertBefore(alertDiv, backLink.nextSibling);
            
            // Tự động xóa sau 5 giây
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Xác thực mật khẩu khi người dùng nhập
        document.getElementById('newPassword').addEventListener('input', function() {
            validatePassword(this.value);
            validateConfirmPassword();
        });
        
        document.getElementById('confirmNewPassword').addEventListener('input', validateConfirmPassword);

        // Khởi tạo
        updateUI();
    </script>
